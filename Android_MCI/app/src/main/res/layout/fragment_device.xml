<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">
    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:columnCount="2"
        android:orientation="vertical"
        tools:context="com.kdd_hp_henry_morrison.mci.device.device">
    <!-- TODO: Update blank fragment layout -->
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_row="0"
        android:text="救援行動: "
            android:layout_marginTop="10dp"/>
        <Spinner
            android:layout_row="0"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_column="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="65dp"
            android:id="@+id/device_rescue"/>
        <TextView
            android:layout_row="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/device_Deviceid"
            android:text="手環編號"
            android:layout_column="0"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
         />
        <TextView
            android:layout_row="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名子"
            android:layout_column="0"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:layout_row="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/device_name"
            android:text="Name"
            android:layout_column="1"
            android:textSize="30sp"
            android:layout_marginLeft="-50dip"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_row="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性別:"
            android:layout_column="0"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_view_border"
            android:textSize="30sp"/>

        <Spinner
            android:layout_row="3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_column="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="-50dip"
            android:id="@+id/device_sex"

            />
        <TextView
            android:layout_row="4"
            android:layout_column="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生日"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            />
        <Button
            android:layout_row="4"
            android:layout_column="1"
            android:background="@drawable/text_view_border"
            android:text="請點選"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="-50dip"
            android:id="@+id/device_birthday"
            />
        <TextView
            android:layout_row="5"
            android:layout_column="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年齡:"
            android:layout_marginTop="10dp"
            android:textSize="30sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="-50dip"
            android:layout_row="5"
            android:background="@drawable/text_view_border"
            android:text="請輸入"
            android:id="@+id/device_age"
            android:textSize="30sp" />
        <TextView
            android:layout_row="6"
            android:layout_column="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身高"
            android:layout_marginTop="10dp"
            android:textSize="30sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="-50dip"
            android:layout_row="6"
            android:background="@drawable/text_view_border"
            android:text="請輸入"
            android:id="@+id/device_height"
            android:textSize="30sp" />
        <TextView
            android:layout_row="7"
            android:layout_column="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="體重"
            android:layout_marginTop="10dp"
            android:textSize="30sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-50dip"
            android:layout_column="1"
            android:layout_marginTop="10dp"
            android:layout_row="7"
            android:background="@drawable/text_view_border"
            android:text="請輸入"
            android:id="@+id/device_weight"
            android:textSize="30sp" />
        <TextView
            android:layout_row="8"
            android:layout_column="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="醫院"
            android:layout_marginTop="10dp"
            android:textSize="30sp"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-50dip"
            android:layout_column="1"
            android:layout_marginTop="10dp"
            android:layout_row="8"
            android:id="@+id/device_hospital"
            android:textSize="30sp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-50dip"
            android:layout_column="1"
            android:text="上傳"
            android:layout_marginTop="10dp"
            android:layout_row="9"
            android:id="@+id/device_upload"
            android:textSize="30sp"  />

    </GridLayout>
</ScrollView>